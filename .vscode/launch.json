{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Plugin",
			"type": "node",
			"request": "attach",
			"processId": "${command:PickProcess}",
			"outFiles": [
				"${workspaceFolder}/com.datti.indicaluna.sdPlugin/bin/**/*.js"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**"
			]
		},
		{
			"name": "Attach to IndicaLuna (port prompt)",
			"type": "node",
			"request": "attach",
			"address": "127.0.0.1",
			"port": "${input:indicaLunaPort}",
			"outFiles": [
				"${workspaceFolder}/com.datti.indicaluna.sdPlugin/bin/**/*.js"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**"
			]
		}
	],
	"inputs": [
		{
			"id": "indicaLunaPort",
			"type": "promptString",
			"description": "Enter the Node inspector port for IndicaLuna",
			"default": "9229"
		}
	]
}